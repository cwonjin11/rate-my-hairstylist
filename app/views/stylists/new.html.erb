<h1>Crete a New Hairstylist !! </h1>
<p style="color: crimson;"><b><%= flash[:message] %></b></p>




  
<%= form_for @stylist do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %><br>
        <%= f.label :phone %>
        <%= f.text_field :phone %><br>
        <%= f.label :shop_name %>
        <%= f.text_field :shop_name %><br>
        <%= f.label :address %>
        <%= f.text_field :address %><br>

<%= f.submit "Create a new Hair Stylist!" %>
<% end %>